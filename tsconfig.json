{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "preserve",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
      "scripts",
      "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
